<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabumuda"
    tools:context=".auth.Register">


    <ImageView
        android:id="@+id/iv_back_register"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginVertical="60sp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="@color/hitam"
        android:text="Madee Drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:textColor="@color/hitam"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/et_name_register"
                android:inputType="textPersonName"
                android:textColorHint="@color/hitam"
                android:hint="Your Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/hitam"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/et_name_register"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/et_email_register"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hitam"
                android:hint="Your Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/hitam"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/et_email_register"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/et_password_register"
                android:inputType="textPassword"
                android:textColorHint="@color/hitam"
                android:hint="Your Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_register_register"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:background="@drawable/btn_18_blue"
                android:layout_below="@id/et_password_register"
                android:textColor="@color/abuabumuda"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/pb_auth_register"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>