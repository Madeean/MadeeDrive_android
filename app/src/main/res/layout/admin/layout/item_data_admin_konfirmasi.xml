<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/radius_18"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_nama_admin_konfirmasi"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textSize="22sp"
        android:textColor="@color/hitam"
        android:text="Madee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_email_admin_konfirmasi"
        android:layout_below="@id/tv_nama_admin_konfirmasi"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="@color/hitam"
        android:text="Madee@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_terima_admin_konfirmasi"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/abuabumuda"
        android:textAllCaps="false"
        android:text="Terima"
        android:background="@drawable/btn_18_blue"
        android:layout_below="@id/tv_email_admin_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_tolak_admin_konfirmasi"
        android:backgroundTint="@color/merah"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/abuabumuda"
        android:textAllCaps="false"
        android:text="Tolak"
        android:background="@drawable/btn_18_blue"
        android:layout_below="@id/tv_email_admin_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>